<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx" styleClass="mainPane">
    <stylesheets>
        <URL value="@../css/menu.css"/>
    </stylesheets>

    <top>
        <VBox styleClass="topBox" alignment="CENTER">
            <Label text="Lobby" styleClass="menuTitle"/>
        </VBox>
    </top>

    <left>
        <VBox styleClass="voteBox" alignment="CENTER">
            <Label text="Vote the map you want to play with:" styleClass="menuLabel"/>
            <FlowPane styleClass="voteInnerBox" alignment="CENTER">
                <ImageView fitHeight="179" fitWidth="234" id="map1" styleClass="button"/>
                <ImageView fitHeight="179" fitWidth="234" id="map2" styleClass="button"/>
                <ImageView fitHeight="179" fitWidth="234" id="map3" styleClass="button"/>
                <ImageView fitHeight="179" fitWidth="234" id="map4" styleClass="button"/>
            </FlowPane>
        </VBox>
    </left>

    <right>
        <VBox styleClass="voteBox" alignment="CENTER">
            <VBox styleClass="lobbyInnerBox">
                <Label text="Pippo" styleClass="playerRow"/>
                <Label text="Pluto" styleClass="playerRow"/>
                <Label text="Topolino" styleClass="playerRow"/>
                <Label text="Minnie" styleClass="playerRow"/>
                <Label text="Paperino" styleClass="playerRow"/>
            </VBox>
        </VBox>
    </right>

    <bottom>
        <VBox styleClass="botBox" alignment="CENTER">
            <ImageView id="backButton" styleClass="button"/>
        </VBox>
    </bottom>
</BorderPane>
