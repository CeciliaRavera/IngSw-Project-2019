<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx" styleClass="mainPane">
    <stylesheets>
        <URL value="@../css/menu.css"/>
    </stylesheets>

    <top>
        <VBox styleClass="topBox" alignment="CENTER">
            <Label alignment="CENTER" text="Lobby" styleClass="menuTitle"/>
        </VBox>
    </top>

    <center>
        <VBox styleClass="lobbyBox" alignment="CENTER">
            <Label text="Enter your username:" styleClass="menuLabel"/>
            <TextField id="usernameField" styleClass="menuTextField"/>

            <Label text="Enter server address:" styleClass="menuLabel"/>
            <TextField id="addressField" styleClass="menuTextField"/>

            <Label text="Enter server port:" styleClass="menuLabel"/>
            <TextField id="portField" styleClass="menuTextField"/>
        </VBox>
    </center>

    <right>
        <VBox styleClass="voteBox" alignment="CENTER">
            <Label text="Select the map you want to play with:" styleClass="menuLabel"/>
            <FlowPane styleClass="voteInnerBox" alignment="CENTER">
                <ToggleButton id="map1" styleClass="voteMap"/>
                <ToggleButton id="map2" styleClass="voteMap"/>
                <ToggleButton id="map3" styleClass="voteMap"/>
                <ToggleButton id="map4" styleClass="voteMap"/>
            </FlowPane>

            <Label text="Do you want to play with terminator?" styleClass="menuLabel"/>

            <ImageView id="voteButton" styleClass="button"/>
        </VBox>
    </right>

    <bottom>
        <VBox styleClass="botBox" alignment="CENTER">
            <ImageView id="backButton" styleClass="button"/>
        </VBox>
    </bottom>
</BorderPane>
